<body>
  <h1>{{blog.title}}</h1>
  <h2>Description</h2>  
  <p>{{blog.description}}</p>
  <ul>
    {{#each blog.Comments as |comment|}}
      <li>{{comment.text}}</li>
    {{/each}}
  </ul>

  <!-- submit new comments -->
   <h2>Add a Comment</h2>
  <form action="/blogs/{{blog.id}}/comments" method="POST">
    <div>
      <label for="commentText">Comment:</label>
      <textarea id="commentText" name="text" rows="4" cols="50" required></textarea>
    </div>
    <div>
      <button type="submit">Submit</button>
    </div>
  </form>
</body>